{
  "name": "@macrome/generator-typescript",
  "version": "0.1.0",
  "description": "A macrome generator for compiling typescript sources",
  "main": "lib/index",
  "engines": {
    "node": ">=15.0.0"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write '**/*.{js,json,md}'",
    "build": "tsc",
    "test": "yarn babel test/fixture.ts -o test/fixture.d.ts",
    "verify": "run-s lint test"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier -c"
    ]
  },
  "keywords": [
    "macrome",
    "generator",
    "typescript",
    "build",
    "transpile"
  ],
  "repository": "git@github.com:conartist6/macrome.git",
  "author": "Conrad Buck <conartist6@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.17.2",
    "@babel/preset-typescript": "^7.16.7",
    "@iter-tools/queue": "^1.5.2",
    "babel-type-scopes": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.0",
    "@macrome/generator": "github:macrome-js/generator#a2f4f5e3690ca54e0d02e51c8a718fde4721441e",
    "@types/babel__core": "^7.1.18",
    "@types/node": "^17.0.16",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.5"
  }
}
